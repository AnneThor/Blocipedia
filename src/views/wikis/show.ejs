<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>
    <main class="container">
      <h1><%= wiki.title %></h1>
      <p><%- body %></p>
      <small>Posted by <%= wiki.User.name %> at <%= wiki.createdAt %></small>
      <br />
      <small>Updated at <%= wiki.updatedAt %></small>
      <br />

      <a href="/wikis/<%= wiki.id %>/edit" class="btn btn-warning">Edit</a>
      <form style="display:initial" action="/wikis/<%= wiki.id %>/destroy" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>
      <a href="/wikis" class="btn btn-warning">See Wiki Index</a>
      
    </main>
    <% include ../static/partials/baseScripts.ejs %>
  </body>
</html>
